

@if (Model.Films.Count > 0)
{
    @foreach (var f in Model.Films)
    {
        <h1>@f.name</h1>
        <h2>Жанр: </h2>
        @f.ganre.name
        <br />
        <h2>Актёры: </h2>
        <br />
        @foreach (var fa in f.FilmActor)
        {
            @fa.Actor.fullName
            <br />
        }

        <br />
    }

    <h2>Список всех жанров</h2>
    @foreach (var g in Model.AllGenres)
    {
        @g
        <br />
    }
    <h2>Список всех актёров</h2>
    @foreach (var a in Model.AllActors)
    {
        @a
        <br />
    }
}
else
{
    <p>Фильмов не найдено</p>
}
